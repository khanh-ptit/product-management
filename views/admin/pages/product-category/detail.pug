extends ../../layouts/default.pug

block main 
    if (record.title)
        h1(class="mb-3") #{record.title}

    if (record.parent_id)
        div(class="mb-4") Danh mục cha: #{parentCategory.title}
    
    if (record.description)
        div(class="mb-4") Mô tả: !{record.description}
    
    if (record.thumbnail)
        div(class="mb-4")
            img(
                src=record.thumbnail
                style="width: 200px"
            )

    if (record.status)
        div(class="mb-4")
            span Trạng thái: 
            if (record.status === "active")
                span(class="badge badge-success") Hoạt động
            else 
                span(class="badge badge-danger") Dừng hoạt động
    
    if (record.position)
        div(class="mb-4") Vị trí: <b>#{record.position}</b>

    div(class="mb-4")
        a(
            class="btn btn-warning"
            href=`${prefixAdmin}/product-category/edit/${record.id}`
        ) Chỉnh sửa
    
