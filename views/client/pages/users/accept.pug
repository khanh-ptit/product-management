extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row.my-2
            include ../../partials/list-btn-user.pug
        
        +box-head("Lời mời kết bạn")

        .row 
            each item in users
                .col-6 
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src="https://vnn-imgs-f.vgcloud.vn/2020/03/23/11/trend-avatar-12.jpg"
                                alt="Le Van A"
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{item.fullName} 
                            div(class="inner-buttons") 
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=item.id
                                ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=item.id
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend 
                                    disabled
                                ) Đã xóa
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accepted-friend
                                    disabled
                                ) Đã chấp nhận


block script 
    script(src="/js/users.js")
    
