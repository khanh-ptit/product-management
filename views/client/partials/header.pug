include ../mixins/sub-menu.pug

header.header
    .container
        .row.align-items-center 
            .col-2
                .inner-logo 
                    a(href="/")
                        img(src="/images/logo.svg", alt="")

            .col-4
                form(
                    action="/search"
                    method="GET"
                )      
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm

            .col-6
                .inner-menu 
                    ul
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct = "/products"
                            a(href=pathProduct) Sản phẩm
                                +sub-menu(layoutProductCategories, pathProduct)
                        li 
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0"})
                        if (!user)
                            li 
                                a(href="/user/register") Đăng ký
                            li    
                                a(href="/user/login") Đăng nhập
                        else 
                            li 
                                a(
                                    href="/user/info"
                                    class="btn btn-primary"
                                ) #{user.fullName}
                            li 
                                a(href="/user/logout") Đăng xuất
                        

